---
import GithubIcon from "../icons/socials/GithubIcon.astro";
import NextIcon from "../icons/tools/NextIcon.astro";
import TailwindIcon from "../icons/tools/TailwindIcon.astro";
import SectionContainer from "../SectionContainer.astro";
import LinkButton from "../LinkButton.astro";
import LinkIcon from "../icons/LinkIcon.astro";
import ReactIcon from "../icons/tools/ReactIcon.astro";
import AngularIcon from "../icons/tools/AngularIcon.astro";
import IonicIcon from "../icons/tools/IonicIcon.astro";
import FirebaseIcon from "../icons/tools/FirebaseIcon.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextIcon,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: ReactIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-black text-white",
    icon: AngularIcon,
  },
  IONIC: {
    name: "Ionic",
    class: "bg-[#176bff] text-white",
    icon: IonicIcon,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-black text-white",
    icon: FirebaseIcon,
  },
};

const PROJECTS = [
  {
    title: "Eventos Lima",
    description:
      "Página en la que se recopila los eventos de diversas organizadores como centro comerciales o ticketeras, que se van a realizar en la ciudad de Lima,Perú. Creada desde cero con Next.js, React y estilizado con Tailwind",
    link: "https://eventoslima.netlify.app/",
    github: "",
    image: "/projects/eventoslima.webp",
    tags: [TAGS.NEXT, TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Procustodia - Landing Page",
    description:
      "Landing Page realizada para una empresa especializada en tasación y custodia de joyas de oro y artículos en general. Creada desde cero con Next.js, React ",
    link: "https://www.procustodia.com/",
    github: "",
    image: "/projects/procustodia.webp",
    tags: [TAGS.NEXT, TAGS.REACT],
  },
  {
    title: "Resource Manager - Página para guardar recursos",
    description:
      "Página donde almaceno recursos que encuentro útiles y en ese momento no cuento con el tiempo para poder revisarlos. Creada desde cero con Ionic, Angular, Tailwind CSS y desplegado en Firebase.",
    link: "https://resourcesurl.firebaseapp.com/",
    image: "/projects/resource_manager.webp",
    tags: [TAGS.ANGULAR, TAGS.IONIC, TAGS.TAILWIND, TAGS.FIREBASE],
  },
];
---

<SectionContainer id="projects" class="">
  <div
    class="w-full lg:flex-row gap-4 lg:gap-10 text-gray-700 dark:text-gray-300 md:flex-row"
  >
    <h2 class="py-4 lg:py-5 font-bold text-2xl dark:text-white lg:text-4xl">
      Proyectos
    </h2>
    <div class="flex flex-col gap-y-8 lg:gap-y-16">
      {
        PROJECTS.map(({ image, title, description, tags, link, github }) => (
          <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
            <div class="w-full md:w-1/2">
              <div class="relative flex flex-col border-none items-center h-64 col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                <img
                  alt="Imagen de Proyecto"
                  class="object-cover object-top w-full h-full border-0 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                  loading="lazy"
                  src={image}
                />
              </div>
            </div>

            <div class="w-full flex flex-col md:w-1/2 md:max-w-lg">
              <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                {title}
              </h3>
              <div style="flex:1;" class="flex flex-wrap mt-2">
                <div>
                  <ul class="flex flex-row flex-wrap gap-y-2 mb-2 gap-x-2">
                    {tags.map((tag) => (
                      <li>
                        <span
                          class={`flex gap-x-2 rounded-full text-xs whitespace-nowrap ${tag.class} py-1 px-2 `}
                        >
                          <tag.icon class="size-4" />
                          {tag.name}
                        </span>
                      </li>
                    ))}
                  </ul>

                  <div class="mt-2 text-gray-700 dark:text-gray-400">
                    {description}
                  </div>
                </div>

                <footer class="flex items-end justify-start mt-4 gap-x-4">
                  {github && (
                    <LinkButton href={github}>
                      <GithubIcon class="size-6 fill-black " />
                      Code
                    </LinkButton>
                  )}
                  {link && (
                    <LinkButton href={link}>
                      <LinkIcon class="size-4" />
                      Preview
                    </LinkButton>
                  )}
                </footer>
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</SectionContainer>
