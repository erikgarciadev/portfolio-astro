---
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
import Header from "@/components/Header.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- HTML Meta Tags -->
    <title>
      Portfolio de Erik Garcia | Frontend Developer con 4 años de experiencia
    </title>
    <meta
      name="description"
      content="Frontend Developer. Especializado en React y NextJs."
    />
    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://erikgarciadev.netlify.app" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="
  Portfolio de Erik Garcia | Frontend Developer con 4 años de experiencia"
    />
    <meta
      property="og:description"
      content="Frontend Developer. Especializado en React y NextJs."
    />
    <meta
      property="og:image"
      content="https://opengraph.b-cdn.net/production/images/4cd01062-2287-4136-b23e-bb83ca91b30e.jpg?token=7UQEnehVpKEYw283Ev8zB0tMk3ldJSlF3liZ3htG6us&height=300&width=1200&expires=33283531373"
    />
    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="erikgarciadev.netlify.app" />
    <meta property="twitter:url" content="https://erikgarciadev.netlify.app" />
    <meta
      name="twitter:title"
      content="
  Portfolio de Erik Garcia | Frontend Developer con 4 años de experiencia"
    />
    <meta
      name="twitter:description"
      content="Frontend Developer. Especializado en React y NextJs."
    />
    <meta
      name="twitter:image"
      content="https://opengraph.b-cdn.net/production/images/4cd01062-2287-4136-b23e-bb83ca91b30e.jpg?token=7UQEnehVpKEYw283Ev8zB0tMk3ldJSlF3liZ3htG6us&height=300&width=1200&expires=33283531373"
    />
    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
    <ClientRouter />
  </head>
  <body>
    <div class="fixed left-0 top-0 -z-10 h-full w-full">
      <div
        class="absolute top-0 z-[-2] h-screen w-screen bg-white dark:bg-[#1A3C80] bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,105,255,0.13)_0,rgba(0,105,255,0)_50%,rgba(0,105,255,0)_100%)]"
      >
      </div>
    </div>
    <Header />
    <main class="px-4 md:px-8">
      <slot />
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    overscroll-behavior: none;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
